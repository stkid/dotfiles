# vim: set filetype=sshconfig nospell:

HashKnownHosts yes
Protocol 2
# CVE-2016-0777 and CVE-2016-0778
UseRoaming no

Host faith cs* gpu* *.comp.hkbu.edu.hk
    ForwardAgent yes
    ProxyCommand nc %h %p
Host db
    User chengxu
    HostName db.server.xuc.me
    ForwardAgent yes
Host * !faith !cs* !*.comp.hkbu.edu.hk !db
    ProxyCommand ssh -q faith nc %h %p
